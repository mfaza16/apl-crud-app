  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> Semua Data</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Perbarui Data</h2>
            <span class="text-light">Gunakan form di bawah untuk memperbarui data karyawan</span>
        </div>

        <!-- add employee form -->
         <!-- form handling -->
 <form method="POST" id="update_employee">
    <div class="new_employee">
        <div class="form-group">
            <label for="name" class="text-light">Nama</label>
            <input type="hidden" name="id" value="<%= employee._id %>">
            <input type="text" name="name" value="<%= employee.name %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="id_karyawan" class="text-light">ID</label>
            <input type="text" name="id_karyawan" value="<%= employee.id_karyawan%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="posisi" class="text-light">Posisi</label>
            <input type="text" name="posisi" value="<%= employee.posisi%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Jenis Kelamin</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Laki-laki" <%= employee.gender == 'Laki-laki' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Laki-laki</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Perempuan"  <%= employee.gender == 'Perempuan' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Perempuan</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Aktif" <%= employee.status == 'Aktif' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Aktif</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Nonaktif" <%= employee.status == 'Nonaktif' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Nonaktif</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Simpan</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

